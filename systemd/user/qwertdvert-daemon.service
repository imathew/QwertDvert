[Unit]
Description=QwertDvert remapping daemon
PartOf=qwertdvert.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/qwertdvert/qwertdvert
Restart=on-failure
RestartSec=1

# uinput/evdev access is normally granted via udev/uaccess rules.
# See README.md for the recommended setup.

[Install]
WantedBy=qwertdvert.target
